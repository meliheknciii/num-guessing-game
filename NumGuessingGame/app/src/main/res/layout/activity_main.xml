<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgroundnum"
    android:orientation="vertical">

    <TextView
        android:background="@drawable/baslik_background"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="40dp"
        android:fontFamily="@font/archivo_black"
        android:text="Number Guessing Game"
        android:textColor="#050505"
        android:textAlignment="center"
        android:textSize="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"

        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        >
        <TextView
            android:id="@+id/textTutulan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ? "
            android:textColor="@color/black"
            android:fontFamily="@font/archivo_black"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutulan Sayı"
            android:fontFamily="@font/archivo_black"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/textTahminEt"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:background="@drawable/edit_text_border"
            android:textColor="@color/black"

            android:fontFamily="@font/archivo_black"
            android:gravity="center_horizontal|center_vertical"
            android:hint="Sayı girin"
            android:textColorHint="#5A5959"
            android:paddingStart="5dp"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tahmin Ettiğimiz Sayı"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/archivo_black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textSonuc"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/archivo_black"
        android:text=" bla bla"
        android:textAlignment="center"
        android:textSize="24dp"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/deneme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/archivo_black"
        android:textColor="@color/black"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="25dp">
        <Button
            android:id="@+id/btnCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:text="Check"
            android:layout_marginEnd="10dp"/>
        <Button
            android:id="@+id/btnRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:text="Restart"/>
    </LinearLayout>




</LinearLayout>